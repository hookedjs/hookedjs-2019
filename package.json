{
  "name": "hookedjs",
  "author": "Brian Dombrowski <bdombro@gmail.com>",
  "version": "0.0.1",
  "license": "ISC",
  "scripts": {
    "upgrade-hard": "npx ncu -u && yarn && yarn upgrade",
    "upgrade-hard-all": "lerna run --parallel upgrade-hard",
    "bootstrap": "NODE_ENV=development lerna bootstrap",
    "prettier": "prettier --loglevel warn --write \"{client-web/src,server-koa2/src}/**/*.{ts,tsx,css,json,md,js}\"",
    "types": "tsc --noEmit",
    "types:watch": "tsc --noEmit --watch",
    "server:koa2": "cd server-koa2; yarn start",
    "server:hasura": "cd server-hasura && yarn dev",
    "build": ". ./.env && lerna run --parallel lerna:build",
    "start": "yarn build && yarn server:koa2",
    "dev": ". ./.env && lerna run --parallel lerna:dev",
    "test": ". ./.env && lerna run --parallel lerna:test",
    "clean": ". ./.env && lerna run --parallel lerna:clean",
    "serve-abandoned": "concurrently --kill-others npm:server:koa2 npm:client:web npm:playground",
    "docker:clean": "docker stop $(docker ps -a -q); docker rm $(docker ps -a -q); docker volume prune -f; docker rmi $(docker images -f \"dangling=true\" -q)",
    "docker:build": "docker build -t hookedjs-node-app .",
    "docker:start:nocompose": "yarn docker:build && docker run -p 3000:3000 -p 3001:3001 -it --rm --name hookedjs-node-app-container hookedjs-node-app",
    "docker:start": "docker-compose up",
    "docker:kill": "docker kill hookedjs-node-app-container",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:ssh": "docker exec -it hookedjs-node-app-container /bin/sh"
  },
  "private": false,
  "husky": {
    "hooks": {
      "pre-commit": ""
    }
  },
  "dependencies": {
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.2",
    "prettier": "^1.16.4"
  },
  "engines": {
    "node": ">11.7",
    "npm": ">=9999.0.0",
    "yarn": ">=1.9.4"
  }
}
