{
  "name": "hookedjs",
  "author": "Brian Dombrowski <bdombro@gmail.com>",
  "version": "0.0.1",
  "scripts": {
    "lerna:bootstrap": "lerna bootstrap",
    "prettier": "prettier --loglevel warn --write \"{client-web/src,server-koa2/src}/**/*.{ts,tsx,css,json,md,js}\"",
    "types": "tsc --noEmit",
    "types:watch": "tsc --noEmit --watch",
    "server:koa2": "cd server-koa2; yarn start",
    "server:hasura": "cd server-hasura && yarn dev",
    "build": ". ./.env && lerna run --parallel lerna:build",
    "start": "yarn build && yarn server:koa2",
    "dev": ". ./.env && lerna run --parallel lerna:dev",
    "test": ". ./.env && lerna run --parallel lerna:test",
    "clean": ". ./.env && lerna run --parallel lerna:clean",
    "serve-abandoned": "concurrently --kill-others npm:server:koa2 npm:client:web npm:playground"
  },
  "private": false,
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier && git add -u"
    }
  },
  "dependencies": {
    "concurrently": "^3.6.0",
    "husky": "^1.1.1",
    "lerna": "^3.10.5",
    "prettier": "^1.14.3"
  },
  "engines": {
    "node": ">=8.11.3 <11",
    "npm": ">=9999.0.0",
    "yarn": ">=1.9.4"
  }
}
